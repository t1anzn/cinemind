<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
  .floating-background {
    z-index: 0;
    background: transparent;
  }

  .floating-text-1 {
    animation: float1 60s linear infinite;
    top: 10%;
    left: -100%;
    color: rgb(203 213 225);
  }

  .floating-text-2 {
    animation: float2 75s linear infinite;
    top: 40%;
    left: -150%;
    color: rgb(96 165 250);
  }

  .floating-text-3 {
    animation: float3 90s linear infinite;
    top: 70%;
    left: -120%;
    color: rgb(34 211 238);
  }

  @keyframes float1 {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(300%);
    }
  }

  @keyframes float2 {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(300%);
    }
  }

  @keyframes float3 {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(300%);
    }
  }
</style>
