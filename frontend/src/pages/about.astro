  <script>
    /* ================================
       SCROLL ANIMATION CONTROLLER
       ================================
       Page-specific scroll animations that work with site-wide accessibility preferences
    */

    // Declare global window property
    declare global {
      interface Window {
        currentMotionReduced?: boolean;
      }
    }

    document.addEventListener("DOMContentLoaded", function () {
      // Wait for accessibility preferences to be initialized
      setTimeout(() => {
        const currentMotionReduced =
          (window as any).currentMotionReduced ||
          document.body.classList.contains("manual-reduced-motion") ||
          window.matchMedia("(prefers-reduced-motion: reduce)").matches;

        // Configuration for when animations should trigger
        const observerOptions = {
          threshold: 0.1,
          rootMargin: "0px 0px -50px 0px",
        };

        // Create intersection observer
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              const delay = parseInt(
                entry.target.getAttribute("data-delay") || "0"
              );

              // Eliminate delays entirely for reduced motion users
              const actualDelay = currentMotionReduced ? 0 : delay;

              setTimeout(() => {
                entry.target.classList.add("animate");
              }, actualDelay);

              observer.unobserve(entry.target);
            }
          });
        }, observerOptions);

        // Start observing elements only if animations are enabled
        if (!currentMotionReduced) {
          const animateElements = document.querySelectorAll(".scroll-animate");
          animateElements.forEach((el) => observer.observe(el));
        } else {
          // If reduced motion, make all elements immediately visible
          const animateElements = document.querySelectorAll(".scroll-animate");
          animateElements.forEach((el) => {
            (el as HTMLElement).style.opacity = "1";
            (el as HTMLElement).style.transform = "none";
            el.classList.add("animate");
          });
        }
      }, 100);
    });
  </script>
